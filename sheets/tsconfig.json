{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": false,
        "declaration": true,
        "rootDir": ".",
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ]
        },
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}